<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <defaults autoconfigure="true" autowire="true" public="false" />

        <prototype namespace="App\SharedKernel\Infrastructure\Bundle\Messenger\"
                   resource="../../Messenger/*"
        />

        <service id="App\SharedKernel\Infrastructure\Bundle\Messenger\CommandBus">
            <argument type="service" id="messenger.bus.commands" />
        </service>

        <service id="App\SharedKernel\Infrastructure\Bundle\Messenger\EventBus">
            <argument type="service" id="messenger.bus.events" />
        </service>

        <service id="App\SharedKernel\Infrastructure\Bundle\Messenger\NotificationBus">
            <argument type="service" id="messenger.bus.notifications" />
        </service>

        <service id="App\SharedKernel\Infrastructure\Bundle\Messenger\QueryBus">
            <argument type="service" id="messenger.bus.queries" />
        </service>
    </services>
</container>
