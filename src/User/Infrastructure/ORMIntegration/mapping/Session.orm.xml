<?xml version="1.0" encoding="UTF-8" ?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
        https://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd"
>
    <entity name="App\User\Domain\Session">
        <id name="id" type="uuid" >
            <generator strategy="NONE" />
        </id>

        <field name="token" nullable="true" />

        <field name="rememberMe" type="boolean" />

        <field name="loginDate" type="datetime" />

        <field name="tokenValidTo" type="datetime" nullable="true" />
        <field name="firstLoginIp" nullable="true" />

        <many-to-one field="user" target-entity="App\User\Domain\User">
            <cascade>
                <cascade-persist />
                <cascade-refresh />
            </cascade>
        </many-to-one>
    </entity>
</doctrine-mapping>
